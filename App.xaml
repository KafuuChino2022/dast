<Application x:Class="dast.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:dast"
             StartupUri="MainWindow2.xaml">
    <Application.Resources>
        
        <ResourceDictionary>
            <DropShadowEffect x:Key="LeftSideShadow" BlurRadius="10" ShadowDepth="6" Direction="180" Color="#80000000" Opacity="0.1" />
                <FontFamily x:Key="ZCOOLKuaiLe">/dast;Component/Assets/Fonts/#ZCOOL KuaiLe</FontFamily>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionary/ButtonTitleDict.xaml"/>

                <ResourceDictionary Source="/Themes/LightTheme.xaml"/>

                <ResourceDictionary Source="/Styles/MainStyle.xaml"/>

                <ResourceDictionary Source="/Assets/Icons/Icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
