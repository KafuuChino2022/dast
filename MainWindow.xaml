<Window x:Class="dast.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dast"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="垃圾探索家"
        ResizeMode="NoResize"
        Height="450" MinHeight="450" MaxHeight="450"
        Width="800" MinWidth="800" MaxWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!-- 窗口样式 -->
        <Border BorderThickness="1" BorderBrush="Gray" Background="White" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="2" CornerRadius="15,15,15,15"/>
        <Border Background="#3282F6" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" CornerRadius="15,15,0,0" MouseLeftButtonDown="CustomTitleBar_MouseLeftButtonDown"/>
        <Grid Grid.ColumnSpan="2" Margin="5,0,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <local:TitleButton Width="30" Height="30" Content="—" Foreground="White" Grid.Column="2" FontSize="12" FontFamily="YouYuan" Click="Minimize_Click" FontWeight="Bold"/>
            <local:TitleButton Width="30" Height="30" Content="□" Foreground="#D4D4D4" Grid.Column="3" FontFamily="YouYuan" FontSize="12" Click="Maximize_Click" IsEnabled="False" FontWeight="Bold"/>
            <local:TitleButton Width="30" Height="30" Content="×" Foreground="White" Grid.Column="4" FontFamily="YouYuan" FontSize="18" Click="Close_Click"/>
        </Grid>
        
        <!-- 以下为客户区布局 -->
        <Button Content="1" Margin="20,20,10,10" Grid.Row="1" Grid.Column="0"/>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Content="2" Margin="10,20,20,10" Grid.Row="0"/>
            <Button Content="3" Margin="10,20,20,10" Grid.Row="1"/>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="4" Margin="20,20,10,20" Grid.Column="0"/>
            <Button Content="5" Margin="10,20,10,20" Grid.Column="1"/>
        </Grid>
        <Button Content="6" Margin="10,20,20,20" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</Window>
