<Window x:Class="dast.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dast"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="垃圾探索家"
        ResizeMode="NoResize"
        Height="450" MinHeight="450" MaxHeight="450"
        Width="800" MinWidth="800" MaxWidth="800">
    <!-- 窗口样式 -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Background="#00adb5" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" CornerRadius="15,15,15,15" MouseLeftButtonDown="CustomTitleBar_MouseLeftButtonDown"/>
        <Border Background="#eeeeee" Grid.Row="0" Grid.Column="1" CornerRadius="15,15,15,15"/>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,10">
                <TextBlock Text="&#xe605;" FontFamily="../Assets/Fonts/#iconfont" FontSize="30" VerticalAlignment="Center"/>
                <TextBlock VerticalAlignment="Center" Text="{Binding Title,RelativeSource={RelativeSource AncestorType=local:MainWindow2}}" Foreground="Black" FontSize="15" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Row="1">
                <local:SuperButton BorderThickness="0" Content="垃圾识别" Foreground="#393e46" HorizontalAlignment="Center" VerticalAlignment="Center" Width="160" Height="30" Background="#00adb5" FontSize="16" FontFamily="../Assets/Fonts/#ZCOOL KuaiLe" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Background="Transparent" Grid.Row="0" MouseLeftButtonDown="CustomTitleBar_MouseLeftButtonDown"/>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MouseLeftButtonDown="CustomTitleBar_MouseLeftButtonDown"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <local:TitleButton Width="30" Height="30" Content="—" Foreground="#222831" Grid.Column="1" FontSize="12" FontFamily="YouYuan" Click="Minimize_Click" FontWeight="Bold"/>
                <local:TitleButton Width="30" Height="30" Content="×" Foreground="#222831" Grid.Column="2" FontFamily="YouYuan" FontSize="18" Click="Close_Click"/>
            </Grid>
        </Grid>
        <Border BorderThickness="1" BorderBrush="#222831" Grid.ColumnSpan="2" CornerRadius="15,15,15,15"/>
    </Grid>
</Window>
