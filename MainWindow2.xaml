<Window x:Class="dast.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"

        xmlns:local="clr-namespace:dast"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="垃圾探索家"
        ResizeMode="NoResize"
        Height="490" MinHeight="490" MaxHeight="490"
        Width="840" MinWidth="840" MaxWidth="840">
    <!-- 窗口样式 -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Background="#00adb5" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" CornerRadius="18" Margin="0,0,10,0" MouseLeftButtonDown="CustomTitleBar_MouseLeftButtonDown"/>
        <Border Background="#eeeeee" Grid.Row="0" Grid.Column="1" Margin="0,0,20,0" CornerRadius="15,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="Gray" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>
        </Border>
        <Border Background="#eeeeee" Grid.Row="0" Grid.Column="1" CornerRadius="15,18,18,15"/>
        


        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,10">
                <TextBlock Text="&#xe605;" FontFamily="../Assets/Fonts/#iconfont" FontSize="30" VerticalAlignment="Center"/>
                <TextBlock VerticalAlignment="Center" Text="{Binding Title,RelativeSource={RelativeSource AncestorType=local:MainWindow2}}" Foreground="Black" FontSize="15" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Row="1" Margin="10,0,-10,0">
                <!-- <local:SuperButton BorderThickness="0" Content="垃圾识别" Foreground="#393e46" HorizontalAlignment="Center" VerticalAlignment="Center" Width="160" Height="30" Background="#00adb5" FontSize="16" FontFamily="../Assets/Fonts/#ZCOOL KuaiLe" FontWeight="Bold"/> -->
                <ItemsControl ItemsSource="{Binding NaviCollection}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton GroupName="ButtonList" HorizontalAlignment="Center" Style="{StaticResource TitleRadioButton}">
                                <Grid VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="10"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                                        <TextBlock Text="{Binding Icon}" FontFamily="../Assets/Fonts/#iconfont" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Title}" FontFamily="../Assets/Fonts/#ZCOOL KuaiLe" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text=">" Grid.Column="1" Style="{StaticResource ButtonTittleHiddenText}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#eeeeee"/>
                                </Grid>
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Background="Transparent" Grid.Row="0" MouseLeftButtonDown="CustomTitleBar_MouseLeftButtonDown"/>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MouseLeftButtonDown="CustomTitleBar_MouseLeftButtonDown"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <local:TitleButton Width="30" Height="30" Content="—" Foreground="#222831" Grid.Column="1" FontSize="10" Click="Minimize_Click" FontWeight="Bold"/>
                <local:TitleButton Width="30" Height="30" Content="×" Foreground="#222831" Grid.Column="2" FontFamily="YouYuan" FontSize="18" Click="Close_Click"/>
            </Grid>
            <Border Grid.Row="1">
                <wv2:WebView2 x:Name="MyWebView" Source="about:blank" />
            </Border>
        </Grid>
        <Border BorderThickness="1" BorderBrush="#222831" Grid.ColumnSpan="2" CornerRadius="15,15,15,15"/>
    </Grid>
</Window>
